{
  "manifest_version": 3,
  "name": "PRScout",
  "version": "1.0",
  "description": "Notifies you when a pull request is assigned to you.",
  "permissions": [
    "notifications",
    "storage",
    "identity",
    "bookmarks",
    "alarms",
    "tabs"
  ],
  "host_permissions": ["*://api.github.com/*"],
  "background": {
    "scripts": ["api.js", "background.js"]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "pullradar@pavanpitiwaduge.com",
      "strict_min_version": "109.0"
    }
  }
}
